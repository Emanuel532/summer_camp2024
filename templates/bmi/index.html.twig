{% extends 'base.html.twig' %}

{% block title %}BMI Tracker{% endblock %}

{% block body %}
    <h1>BMI Tracker</h1>

    {{ form_start(form) }}
    {{ form_row(form.weight) }}
    {{ form_row(form.height) }}
    <button class="btn btn-primary">Submit</button>
    {{ form_end(form) }}

    //add refresh button
    //add bmi to navbar
    <h2>Your BMI History</h2>
    <canvas id="bmiChart"></canvas>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let bmiLogs = [
            ];
            {% for bmilog in bmiLogs %}
                obj = {};
                obj['weight'] = {{ bmilog.weight }};
                obj['height'] = {{ bmilog.height }};
                obj['createdAt'] = new Date( "{{ bmilog.createdAt|date }}" );
                bmiLogs.push(obj);
            {% endfor %}
            console.log(bmiLogs);

            const ctx = document.getElementById('bmiChart').getContext('2d');
            const data = {
                labels: bmiLogs.map(log => log.createdAt),
                datasets: [{
                    label: 'BMI History',
                    data: bmiLogs.map(log => log.weight / ((log.height / 100) ** 2)),
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    fill: false
                }]
            };

            const config = {
                type: 'line',
                data: data,
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            type: 'time',
                            time: {
                                unit: 'day',
                                tooltipFormat: 'MMM dd, yyyy HH:mm',
                                displayFormats: {
                                    day: 'MMM dd'
                                }
                            },
                            title: {
                                display: true,
                                text: 'BMI Registered At'
                            }
                        },
                        y: {
                            beginAtZero: false,
                            title: {
                                display: true,
                                text: 'BMI value'
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `BMI: ${context.raw.toFixed(2)}`;
                                }
                            }
                        }
                    }
                }
            };

            new Chart(ctx, config);
        });
    </script>
{% endblock %}
