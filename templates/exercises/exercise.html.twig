{% extends 'base.html.twig' %}

{% block title %}Exercise Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-center bg-dark text-white">
                        <h2>Exercise Details</h2>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title text-center">{{ exercise.nume }}</h4>
                        <p class="card-text text-center"><strong>Type:</strong> {{ exercise.tipid.nume }}</p>
                        <div class="text-center mt-4">
                            <p class="card-text text-center"><strong>Video</strong></p>
                            <div class="embed-responsive embed-responsive-16by9">
                                <iframe class="embed-responsive-item" src="{{ exercise.linkVideo }}" allowfullscreen></iframe>
                            </div>


                        </div>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <a href="{{ path('view_exercises') }}" class="btn btn-primary">Back to Exercises</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
